void run(int runOrder){
	string cmd="";
	loadConfig();

	lanLoadText(cfg_textLanguage);

	//getting the filename to export/readout the dru
	string druname = "";
	project.board(B){
		druname=filesetext(B.name,"-exportpro.dru");
	}

	if (runOrder==0){ //execution #1
		//not file type specific settings 
		dlgDialog(filename(argv[0])){
			dlgLabel(lanGetText("dlg.setup.expl"));
			
			dlgGroup(lanGetText("headline.setup.steps")){
				dlgHBoxLayout{dlgLabel(lanGetText("settings.setup.layer")); dlgStretch(1); dlgPushButton(lanGetText("button.add")) {
					executeButton("EDIT .brd;" + checkLayerBrd() +
						"EDIT .sch;" + checkLayerSch());};}
				dlgHBoxLayout{dlgLabel(lanGetText("settings.setup.FrameBrd")); dlgStretch(1); dlgPushButton(lanGetText("button.add")) {executeButton("EDIT .brd;"+addFrameBrd(1));};}
				dlgHBoxLayout{dlgLabel(lanGetText("settings.setup.FrameSch")); dlgStretch(1); dlgPushButton(lanGetText("button.add")) {executeButton("EDIT .sch;"+addFrameSch(1));};}
				dlgHBoxLayout{dlgLabel(lanGetText("settings.setup.drill")); dlgStretch(1); dlgPushButton(lanGetText("button.add")){if(detectDrillsymbols()) dlgMessageBox(lanGetText("dlg.setup.drillSymbolsCreated"));};}
			}
			dlgHBoxLayout{
				dlgStretch(1); 
				dlgPushButton(lanGetText("button.setup.run")) { dlgAccept();};
				dlgPushButton(lanGetText("button.cancel")){dlgReject(); exit("");};
			}
		};

		//checking if pdftk is installed
		checkPDFTK();

		//Check if printer options are correct
		checkPrintSettings();

		if(schematic){
			cmd += "EDIT .brd; ";
		}

		cmd += "DRC SAVE \'" + druname + "\'; ";
	}
	else if (runOrder == 1){ //execution #2
		//Settings that only can be edited in the .brd file
		detectDrillsymbols();

		cmd += checkLayerBrd();

		cmd += addFrameBrd(0);

		project.board(B){			
			//todo: check ob die fabdoc layer schon benuzt werden
		}

		//checking if the default dru file is loaded
		if(filesize(druname)) {
			string data;
			fileread(data, druname);

			if ((strstr(data, "Eurocircuits-EAGLE design rules")!=-1)||
				(strstr(data, "Standard-Design-Regeln")!=-1)){
				int opt = dlgMessageBox(lanGetText("dlg.setup.stdDRU"), lanGetText("general.yes"), lanGetText("button.continue"));

				if (opt==0){
					cmd += "DRC *;";
					exit(cmd);
				}
			}
		}

		cmd+="EDIT .sch;";
	}
	else if (runOrder==2){ //execution #3
		//Settings that only can be edited in the .sch file

		//check if there are specific bom entrys
		bomLoadData();
		string hasBom="";
		for(int l=0; l<partcount; l++){
			if(distributor[l])
				hasBom+=distributor[l]+"\n";
			
			if(manufacturer[l])
				hasBom+=manufacturer[l]+"\n";
			
			if(populate[l])
				hasBom+=populate[l]+"\n";
		}

		//generating bom entrys
		if(hasBom==""){
			int opt = dlgMessageBox(lanGetText("dlg.setup.noBom"), lanGetText("general.yes"), lanGetText("general.manual"), lanGetText("general.no"));

			if(opt==0){
				cmd+=addBomValues();
			}
			else if (opt==1){
				cmd+="RUN '"+filedir(argv[0])+"/SelectPart.ulp';";
				exit(cmd);
			}
		} 

		cmd += checkLayerSch();

		cmd += addFrameSch(0);
	}
	else if(runOrder==3){ //execution #4
		int opt = dlgMessageBox(lanGetText("dlg.setup.finished"), lanGetText("general.yes"), lanGetText("general.no"));
		if (opt==0){
			cmd+="RUN '"+filedir(argv[0])+"/ExportPro.ulp';";
		}
	}


	if(runOrder<3){
		sprintf(cmd, "%sRUN \'%s\' %d", cmd, argv[0], ++runOrder);
 	}

 	// debugVal(cmd+"\n\nRUN Nr. ",runOrder);
	exit(cmd);
}

